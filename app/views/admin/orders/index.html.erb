<h1>Zam√≥wienia</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Data utworzenia</th>
      <th>Status</th>
      <th>Suma</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order|%>
    <tr>
      <td>#<%= order.id %></td>
      <td><%= l order.created_at, format: :long %></td>
      <td><%= OrderStateMachine.states_map[order.current_state] %></td>
      <td><%= number_to_currency order.full_cost %></td>
      <td>
        <% if order.current_state == "confirmed" %>
        <%= link_to "Edycja", admin_order_path(order), class: "btn btn-default btn-xs" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
